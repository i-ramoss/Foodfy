{% extends 'site/layout.njk' %}

{% block head %}
  <link rel='stylesheet' href='/styles/site/recipes.css'>

  <title>Recipes - Foodfy</title>
{% endblock %}

{% block content%}

  <div class='cards'>

    {% for recipe in data %}
      <div class='card'>
        <img id='{{ data.indexOf(recipe) }}' src='{{recipe.image}}' alt='Imagem de {{recipe.title}}'>
        <h3 class='name'>{{recipe.title}}</h3>
        <p class='cooker'>{{recipe.author}}</p>
      </div>
    {% endfor %}

  </div>

{% endblock %}