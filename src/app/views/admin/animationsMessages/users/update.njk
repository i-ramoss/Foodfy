{% extends "admin/layout.njk" %}

{% block content %}
  <div class="success message-lottie">
    <div class="update-lottie"></div>
    <h2>The user {{ name }} has been updated successfully!</h2>
    <a class="button" href="/admin/users">See all users</a>
  </div>
  
  <script src="/animations/lottie.min.js"></script>
  <script>
    const element = document.querySelector(".update-lottie")

    lottie
      .loadAnimation({
        container: element,
        renderer: "svg",
        loop: true,
        autoplay: true,
        path: "/animations/user/37265-success-animation.json"
      })
  </script>

{% endblock %}