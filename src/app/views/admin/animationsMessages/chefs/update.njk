{% extends "admin/layout.njk" %}

{% block content %}
  <div class="success message-lottie">
    <div class="update-lottie"></div>
    <h2>The Chef {{ name }} has been updated successfully!</h2>
    <a class="button" href="/admin/chefs/{{ chef_id }}">See Chef</a>
  </div>
  
  <script src="/animations/lottie.min.js"></script>
  <script>
    const element = document.querySelector(".update-lottie")

    lottie
      .loadAnimation({
        container: element,
        renderer: "svg",
        loop: true,
        autoplay: true,
        path: "/animations/chef/45729-chef-animation.json"
      })
      .setSpeed(1.5)
  </script>

{% endblock %}