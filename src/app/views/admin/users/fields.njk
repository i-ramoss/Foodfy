<section class="user details">
  <div class="item">
    <h2>Name:</h2>
    <div>
      <input type="text" name="name" value="{{user.name}}" placeholder="Enter the full name">
    </div>
  </div>

  <div class="item">
    <h2>Email:</h2>
    <div class="input">
      <input type="email" name="email" value="{{user.email}}" placeholder="Enter the email" onblur="Validate.apply(this, 'isEmail')">
    </div>
  </div>

  <div class="item">
    <div class="admin-checkbox">
      <input type="checkbox" id="admin" name="is_admin" value="true" {% if user.is_admin == true %} checked {% endif %}>
      <label for="admin">Admin</label>
    </div>
  </div>
</section>