{% extends "admin/session/layout.njk" %}

{% block content %}

  <section class="password container form">
    <form action="/admin/forgot-password" method="post">

      <div class="topic">
        <h2>Forgot Password?</h2>
      </div> 

      <div class="fields">
        <div class="item">
          <h2>Email:</h2>
          <div class="input">
            <input 
              type="email" 
              name="email" 
              value="{{user.email}}" 
              placeholder="Enter the email to recover your password" 
              onblur="Validate.apply(this, 'isEmail')"
            >
          </div>
        </div>
      </div>

      <button class="button" type="submit">Access</button>

    </form>
  </section>

{% endblock %}