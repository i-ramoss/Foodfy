{% extends "admin/session/layout.njk" %}

{% block content %}

  <section class="password container form">
    <form action="/admin/reset-password" method="post">

      <div class="topic">
        <h2>New Password</h2>
      </div> 

      <div class="fields">
        <div class="item">
          <h2>Email:</h2>
          <div class="input">
            <input 
              type="email" 
              name="email" 
              value="{{ user.email }}" 
              placeholder="Enter the email to recover your password" onblur="Validate.apply(this, 'isEmail')"
            >
          </div>
        </div>

        <div class="item">
          <h2>New password:</h2>
          <div class="input">
            <input 
              type="password" 
              name="password" 
              placeholder="Enter your new password" 
              >
          </div>
        </div>

        <div class="item">
          <h2>Repeat password:</h2>
          <div class="input">
            <input 
              type="password" 
              name="passwordRepeat" 
              placeholder="Repeat your new password" 
            >
          </div>
        </div>

        <input type="hidden" name="token" value="{{ token }}">
      </div>

      <button class="button" type="submit">Save</button>
    </form>
  </section>

{% endblock %}