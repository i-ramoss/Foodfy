{% extends "site/layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/site/recipes.css">

  <title>Recipes - Foodfy</title>
{% endblock %}

{% block content%}

  <div class="cards">
    {% for recipe in recipes %}
      <div class="card">
        <img src="{{recipe.image}}" id="{{recipe.id}}" alt="Imagem de {{recipe.title}}">
        <h3 class="name">{{recipe.title}}</h3>
        <p>by {{recipe.chef_name}}</p>
      </div>
    {% endfor %}
  </div>

{% endblock %}