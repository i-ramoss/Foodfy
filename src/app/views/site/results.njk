{% extends 'site/layout.njk' %}

{% block head %}
  <link rel="stylesheet" href="/styles/site/index.css">

  <title>Foodfy</title>
{% endblock %}

{% block search %}
<li>
  <form action="/results" method="get">
    <input 
    type="text" 
    name="filter" 
    value="{{ filter }}" 
    placeholder="Search for a recipe:">
    <button type="submit">Search</button>
  </form>
</li>
{% endblock %}

{% block content %}

  <div class="topic">
    <h2>Buscando por ""</h2>
  </div>

  <div class="cards">
    {% for recipe in recipes %}
      <div class="card">
        <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
        <h3 class="name">{{recipe.title}}</h3>
        <p class="cooker">by {{recipe.author}}</p>
      </div>
    {% endfor %}
  </div>

{% endblock%}