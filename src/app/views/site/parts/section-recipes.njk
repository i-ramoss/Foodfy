{% macro recipes(name, filter, recipes) %}

{% if name %}
  <div class="topic">
      <h2>{{name}} {% if filter %} "{{filter}}" {% endif %}</h2>
  </div>
{% endif %}


  <div class="cards">
    {% for recipe in recipes %}
      <div class="card">
        <img src="{{recipe.image}}" id="{{recipe.id}}" alt="Image of {{recipe.title}}">
        <h3  class="name">{{recipe.title}}</h3>
        <p>by {{recipe.chef_name}}</p>
      </div>
    {% endfor %}
  </div>

{% endmacro %}